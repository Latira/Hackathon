package com.company;
import java.io.*;
import java.nio.file.Paths;
import java.nio.file.Path;
import com.pdfjet.*;

public class Main {

    public static void main(String[] args) throws Exception {
        FileOutputStream fos= new FileOutputStream("Example.pdf");
        PDF pdf = new PDF(fos);
        Font ARIALBD = new Font(pdf, CoreFont.HELVETICA_BOLD);
        Page page = new Page(pdf, A4.PORTRAIT);
        TextLine text;
        text = new TextLine(ARIALBD,"Advertisers study how people learn so that they can 'teach' them to respond to their advertising.");
        text.setPosition(10.0,70.0);
        text.drawOn(page);
        pdf.close();
        fos.close();
        Path file = (Path) Paths.get("Example.pdf");
    }
}
